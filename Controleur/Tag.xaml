<UserControl x:Class="Pomodedouche.Controleur.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controleur="clr-namespace:Pomodedouche.Controleur"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Label x:Name="root" Content="{Binding Name}" Background="{Binding Color}" BorderBrush="Black" MaxHeight="24" FontStyle="Italic" FontStretch="Normal" FontWeight="Thin"
           Padding="5,3,5,5" Margin="0,0,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
</UserControl>
