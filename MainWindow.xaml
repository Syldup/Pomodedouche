<Window x:Class="Pomodedouche.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodedouche"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="549" Width="463" Background="#FF15202B">
    <Grid>
        <Label Content="Pomodedouche" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White"/>

        <ToggleButton Name="PlayPause" Height="50" Click="Button_Play"  BorderThickness="0" Background="Transparent" BorderBrush="Transparent" Margin="341,191,0,0" Foreground="White" HorizontalAlignment="Left" Width="50" VerticalAlignment="Top">

            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}">


                    <Setter Property="Content">
                        <Setter.Value>
                            <Image Source="playbutton.png" Height="50" Width="50" HorizontalAlignment="Center"/>
                        </Setter.Value>
                    </Setter>


                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Source="pausebutton.png" Height="70" Width="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>

                </Style>
            </ToggleButton.Style>
        </ToggleButton>

        <Label Name="lbTime" Content="25:00" HorizontalAlignment="Left" Margin="318,94,0,0" VerticalAlignment="Top" FontSize="36" Panel.ZIndex="10" Foreground="White"/>
        <ProgressBar x:Name="TimerBar" HorizontalAlignment="Left" Height="19" Margin="291,152,0,0" VerticalAlignment="Top" Width="149" Foreground="#FF1784DE"/>

        <Button Content="Ajouter un mot clé" Margin="0,0,93,91" Click="Button_Add_Tag" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103"/>
        <TextBox x:Name="tbTag" Margin="115,0,0,92" Text="Tag" TextWrapping="Wrap" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120"/>

        <Button Content="Ajouter pomodoro" Margin="0,0,93,46" Click="Button_Add_Pomodoro" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103"/>
        <TextBox x:Name="tbPomoName" Margin="115,0,0,46" Text="No-name" TextWrapping="Wrap" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120"/>

        <Grid x:Name="blocPomodoro" Margin="0,84,0,0" HorizontalAlignment="Left" Width="201" Height="87" VerticalAlignment="Top">
            <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,2,0,0" FontSize="18" Foreground="White"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="12,31,0,0" VerticalAlignment="Top" Background="#FF5DEA84" BorderThickness="0.5,0.5,0.5,0.5" BorderBrush="Black" MaxHeight="24" FontStyle="Italic" FontStretch="Normal" FontWeight="Thin" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" FlowDirection="LeftToRight" Padding="5,3,5,5"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="54,31,0,0" VerticalAlignment="Top" Background="#FF4ACCFD" BorderThickness="0.5,0.5,0.5,0.5" BorderBrush="Black" MaxHeight="24" FontStyle="Italic" FontStretch="Normal" FontWeight="Thin" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" FlowDirection="LeftToRight" Padding="5,3,5,5"/>

            <Separator HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top" Background="#FFD8D4D4" Width="146" Height="2" BorderThickness="0,0,0,0" SnapsToDevicePixels="True" FontWeight="Normal"/>
            <Label Content="5 min" HorizontalAlignment="Left" Margin="146,54,0,0" VerticalAlignment="Top"  Foreground="White" FontSize="10" Height="22"/>

        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,46,0,0" Text="Recherche.." TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Background="#FFCBCBCB"/>
        <Grid x:Name="gTags" Margin="0,308,0,0" Height="24" VerticalAlignment="Top">
            <Label Content="yolo" Background="#FF5DEA84" BorderBrush="Black" MaxHeight="24" FontStyle="Italic"
                           FontStretch="Normal" FontWeight="Thin" Padding="5,3,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <ItemsControl ItemsSource="{Binding}" Margin="5,349,0,132">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" Background="{Binding Color}" BorderBrush="Black" MaxHeight="24" FontStyle="Italic" FontStretch="Normal" FontWeight="Thin"
                           Padding="5,3,5,5" Margin="0,0,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
