<Window x:Class="Pomodedouche.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodedouche"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="549" Width="503">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ToggleButton Name="PlayPause" Height="50" Width="50" Click="Button_Play"  BorderThickness="0" Background="Transparent" BorderBrush="Transparent" Margin="341,191,99,292">
            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}">


                    <Setter Property="Content">
                        <Setter.Value>
                            <Image Source="playbutton.png" Height="50" Width="50" HorizontalAlignment="Center"/>
                        </Setter.Value>
                    </Setter>


                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Source="pausebutton.png" Height="70" Width="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>

                </Style>
            </ToggleButton.Style>
        </ToggleButton>

        <Label Name="lbTime" Content="25:00" HorizontalAlignment="Left" Margin="318,94,0,0" VerticalAlignment="Top" FontSize="36" Panel.ZIndex="10"/>
        <Button Content="Ajouter un mot clé" HorizontalAlignment="Left" Margin="267,422,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="115,423,0,0" Text="MotCléTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Pomodedouche" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ProgressBar x:Name="TimerBar" HorizontalAlignment="Left" Height="19" Margin="291,152,0,0" VerticalAlignment="Top" Width="149" Foreground="#FF1784DE"/>
        <Expander Grid.Column="2" Header="Expander" HorizontalAlignment="Left" Height="100" Margin="177,248,0,0" VerticalAlignment="Top" Width="100"/>
        <Grid Margin="10,94,311,333">
            <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,2,0,0" FontSize="18"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Background="#FF8CD4F0"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="53,30,0,0" VerticalAlignment="Top" Background="#FF5DEA84"/>

        </Grid>
    </Grid>
</Window>
